<?xml version='1.0' encoding='UTF-8' standalone='yes'?>
<addon id="service.tencent.content.provider" name="Tencent Content Provider" provider-name="yugimaster" version="0.0.1">
	<requires>
		<import addon="xbmc.json" version="7.9.0"/>
		<import addon="xbmc.python" version="2.25.0"/>
		<import addon="script.plugin.cache2"/>
		<import addon="script.module.simplejson" version="3.3.0"/>
		<import addon="script.module.routing" version="0.1.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="plugin.py">
		<provides>video</provides>
	</extension>
	<extension library="service.py" point="xbmc.service" start="login" />
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Browse movies and episodes in a variety of sorted playlists.</summary>
		<description lang="en">Plugin for skins to provide tencent content throughout the skin. It can also be used as standalone plugin to browse the playlists in the video library.</description>
		<disclaimer lang="en" />
		<platform>all</platform>
		<language />
	</extension>
</addon>
